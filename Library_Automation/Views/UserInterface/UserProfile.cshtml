@model IQueryable<Library_Automation.Models.Book>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content="">
    <link href="~/UserInterface/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/UserInterface/css/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Dosis:200,300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:200,300,400,500,600,700" rel="stylesheet">
</head>

<header class="item header margin-top-0">
    <div class="wrapper">
        <nav role="navigation" class="navbar navbar-white navbar-embossed navbar-lg navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button data-target="#navbar-collapse-02" data-toggle="collapse" class="navbar-toggle" type="button">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle navigation</span>
                    </button>
                    <a href="/UserInterface/MainPageIndex" class="navbar-brand brand"> KÜTÜPHANEM </a>
                </div>
                <div id="navbar-collapse-02" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        @if (ViewBag.loggedUserId == null)
                        {
                            <li class="propClone"><a href="/UserInterface/MainPageIndex">Ana Sayfa</a></li>
                            <li class="propClone"><a href="/User/Index">Giriş Yap</a></li>
                            <li class="propClone"><a href="/User/Index/?isSignup=1">Üye Ol</a></li>
                            <li class="propClone"><a href="/Authorized/Index">Yetkili Girişi</a></li>
                        }
                        else
                        {
                            <li class="propClone"><a href="/UserInterface/MainPageIndex">Ana Sayfa</a></li>
                            <li class="propClone"><a href="/UserInterface/UserProfile">Profil</a></li>
                            <li class="propClone"><a href="/UserInterface/LogOut">Çıkış Yap</a></li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
        
    </div>
</header>

<div class="card-body table-responsive p-0" style="height:400px; margin-top:100px; margin-left:200px; margin-right:200px;">
    <table class="table table-hover-fixed text-nowrap">
        <thead>
            <tr>
                <th>Kitap Adı</th>
                <th>Yazar</th>
                <th>Yayın Evi</th>
                <th>Sayfa Sayısı</th>
                <th>Ödünç Alma Tarihi</th>
                <th>İade Tarihi</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.BookName</td>
                        <td>@x.BookWriter</td>
                        <td>@x.BookPublisher</td>
                        <td>@x.BookNumberOfPage</td>
                        <td>@x.BarrowDate.ToString("dd/MM/yyyy")</td>
                        <td>@x.ReturnDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            
            

        </tbody>
    </table>
</div>


<div class="footer text-center" style="margin-top:96px;">
    <div class="container">
        <div class="row">

            <p>
                &copy; 2022 Kütüphane Otomasyonu<br />
                Kütüphanem - Tüm hakları saklıdır.
            </p>
        </div>
    </div>
</div>



</html>
