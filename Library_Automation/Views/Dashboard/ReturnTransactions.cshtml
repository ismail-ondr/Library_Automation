@model IQueryable<Library_Automation.Models.BorrowDto>
@{
    ViewData["Title"] = "ReturnTransactions";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="content-wrapper">

    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">İade İşlemleri</h3>
        </div>

        
        <div class="card-body table-responsive p-0" style="height:max-content">
            <table class="table table-hover-fixed text-nowrap">
                <thead>
                    <tr>
                        <th>Kitap Adı</th>
                        <th>Üye Adı</th>
                        <th>Ödünç Alma Tarihi</th>
                        <th>Son Teslim Tarihi</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.BookName</td>
                                <td>@x.UserName</td>
                                <td>@x.BorrowDate.ToString("dd/MM/yyyy")</td>
                                <td>@x.ReturnDate.ToString("dd/MM/yyyy")</td>
                                <td><a href="/Dashboard/ReturnBook/@x.BookId" class="btn btn-danger">İade</a></td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>

</div>


